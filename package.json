{
  "name": "crts",
  "version": "0.0.6",
  "description": "A CLI tool for my rollup + typescript lib configs setup",
  "main": "src/index.ts",
  "bin": {
    "crts": "dist/index.js"
  },
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "build": "tsc && cp -r template dist",
    "lint": "eslint --fix --ignore-path .gitignore --ext .js,.ts src",
    "pretest": "npm run build",
    "test": "jest",
    "prepublishOnly": "npm run build",
    "release": "npm version patch && git push --follow-tags && npm publish"
  },
  "keywords": [
    "rollup",
    "typescript",
    "library"
  ],
  "author": "汪東陽",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/EastSun5566/crts"
  },
  "homepage": "https://github.com/EastSun5566/crts",
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.21",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "eslint": "^7.18.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "jest": "^26.6.3",
    "typescript": "^4.1.3"
  }
}
